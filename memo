_ft_strcpy:
    ; ft_strcpy(dst, src)
    push rdi          ; save dst
    push rsi          ; save src

    ; int len = ft_strlen(src);
    call _ft_strlen
    mov r11, rax      ; store length of src in r11

    pop rsi           ; restore src
    pop rdi           ; restore dst

    ; int i = 0;
    xor r10, r10      ; use r10 as loop counter

_loop:
    cmp r10, r11
    je _loop_end
    movzx rax, byte [rsi + r10]   ; load byte from src to rax
    mov [rdi + r10], al           ; store byte from rax to dst
    inc r10
    jmp _loop

_loop_end:
    mov byte [rdi + r10], 0       ; null-terminate the string
    mov rax, rdi                  ; return dst
    ret
